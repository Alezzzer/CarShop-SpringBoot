package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.dto.AzKomentariDTO;
import com.dto.AzTemaDTO;
import com.service.BlogService;

@RestController
@RequestMapping("/blog")
public class BlogController {
	
	@Autowired
	BlogService service;
	
	 @GetMapping("/teme")
	    public List<AzTemaDTO> getAllAzTema() {
	        return service.vratiTeme();
	    }
	 
	 @GetMapping("/svikomentari")
	    public List<AzKomentariDTO> getAllAzKomentari() {
	        return service.vratiKomentare();
	    }
	 
	 @GetMapping("/svikomentarinatemu")
	    public List<AzKomentariDTO> getAllAzKomentariNaTemu(String naslov) {
	        return service.vratiKomentareNaTemu(naslov);
	    }
	 
}
